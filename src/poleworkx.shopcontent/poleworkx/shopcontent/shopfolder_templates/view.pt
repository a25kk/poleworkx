<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="poleworkx.shopcontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

  <section id="shop-listing">

    <h1 class="documentFirstHeading"
      tal:condition="not:context/headline"
      tal:content="context/Title" />

    <h1 class="documentFirstHeading"
      tal:condition="context/headline"
      tal:content="context/headline" />

    <p class="documentDescription"
      tal:condition="context/Description"
      tal:content="context/Description" />

    <div id="content-core">

      <div tal:condition="context/text"
        tal:content="structure context/text/output" />

      <tal:categories tal:condition="has_categories">
        <section id="shop-categories"
            tal:define="items view/categories">
            <article class="tielItem"
                tal:repeat="item/items">

              <h2 tal:content="item/Title" />
              <div class="thumbnail">
                <img tal:define="item_obj item/getObject;
                                 scale item_obj/@@images"
                    tal:condition="item_obj/image"
                    tal:replace="structure python: scale.scale('image',
                                 scale='mini').tag()" />
              </div>
              <p tal:content="item/Description" />
              <a href="" class="link-more"
                i18n:translate=""
                tal:attributes="href item/getURL">
                Show products</a>

            </article>
        </section>
      </tal:categories>

    </div>

  </section>
  </metal:content-core>
</metal:main>

</body>
</html>

